<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_style"
            android:textColor="@android:color/white"
            android:id="@+id/buttonSave" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Restore"
            android:background="@drawable/button_style"
            android:textColor="@android:color/white"
            android:id="@+id/buttonRestore" />
    </RelativeLayout>

    <ImageView
        android:id = "@+id/photoInEditor"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:scaleType="fitCenter"
        android:layout_margin="20dp" />

    <SeekBar
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/sliderBar1"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="90dp"
        android:max="@integer/abc_config_activityShortDur"
        android:indeterminate="false"
        android:progress="@integer/abc_max_action_buttons"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0/150"
        android:id="@+id/tv_sliderBar1"
        android:textSize="15sp"
        android:visibility="invisible"/>

    <SeekBar
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/sliderBar2"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="60dp"
        android:max="@integer/abc_config_activityShortDur"
        android:indeterminate="false"
        android:progress="@integer/abc_max_action_buttons"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0/150"
        android:id="@+id/tv_sliderBar2"
        android:textSize="15sp"
        android:layout_marginStart="35dp"
        android:visibility="invisible"/>

    <SeekBar
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/sliderBar3"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="100dp"
        android:max="@integer/abc_config_activityShortDur"
        android:indeterminate="false"
        android:progress="@integer/abc_max_action_buttons"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0/150"
        android:id="@+id/tv_sliderBar3"
        android:textSize="15sp"
        android:layout_marginStart="35dp"
        android:visibility="invisible"/>

    <Spinner
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:prompt="@string/promptSpinner"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="128dp"
        android:spinnerMode="dropdown" />


