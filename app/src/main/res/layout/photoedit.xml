<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id = "@+id/photoInEditor"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        />


    <SeekBar
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/sliderBar1"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="90dp"
        android:max="@integer/abc_config_activityShortDur"
        android:indeterminate="false"
        android:progress="@integer/abc_max_action_buttons"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0/150"
        android:id="@+id/tv_sliderBar1"
        android:textSize="15sp"
        android:layout_marginLeft="35dp"
        android:layout_alignBottom="@+id/sliderBar1"
        android:visibility="invisible"/>

    <SeekBar
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/sliderBar2"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="60dp"
        android:max="@integer/abc_config_activityShortDur"
        android:indeterminate="false"
        android:progress="@integer/abc_max_action_buttons"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0/150"
        android:id="@+id/tv_sliderBar2"
        android:textSize="15sp"
        android:layout_marginLeft="35dp"
        android:layout_alignBottom="@+id/sliderBar2"
        android:visibility="invisible"/>

    <SeekBar
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/sliderBar3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="100dp"
        android:max="@integer/abc_config_activityShortDur"
        android:indeterminate="false"
        android:progress="@integer/abc_max_action_buttons"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0/150"
        android:id="@+id/tv_sliderBar3"
        android:textSize="15sp"
        android:layout_marginLeft="35dp"
        android:layout_alignBottom="@+id/sliderBar3"
        android:visibility="invisible"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/buttonSave"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="Restore"
        android:id="@+id/buttonRestore"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>


    <Spinner
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:prompt="@string/promptSpinner"
        android:gravity="center_horizontal"
        android:textAlignment="gravity"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="128dp"
        android:spinnerMode="dropdown" />


